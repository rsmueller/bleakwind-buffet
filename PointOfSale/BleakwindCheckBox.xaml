<UserControl x:Class="PointOfSale.BleakwindCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200"
             Background="#212121" Foreground="White">
    <StackPanel Height="30" Name="panel" Orientation="Horizontal" >
        <Viewbox Height="{Binding Path=ActualHeight, ElementName=panel}">
            <CheckBox x:Name="checkbox"/>
        </Viewbox>
        <TextBlock x:Name="textblock" VerticalAlignment="Center" FontSize="22"></TextBlock>
    </StackPanel>
</UserControl>
