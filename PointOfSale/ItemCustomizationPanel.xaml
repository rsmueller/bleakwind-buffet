<UserControl x:Class="PointOfSale.ItemCustomizationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="640">
    <UserControl.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="22"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Name="label" FontSize="28" Background="#424242" Foreground="White" Grid.ColumnSpan="2" Grid.Row="0"/>
        <UniformGrid Name="stack" Grid.ColumnSpan="2" Grid.Row="1" Background="#424242">
        </UniformGrid>
        <local:BleakwindButton x:Name="btnClose" Grid.Row="2">Close without Saving</local:BleakwindButton>
        <local:BleakwindButton x:Name="btnAddToOrder" Grid.Row="2" Grid.Column="1">Add to Order</local:BleakwindButton>
    </Grid>
</UserControl>
