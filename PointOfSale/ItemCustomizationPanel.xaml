<UserControl x:Class="PointOfSale.ItemCustomizationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Name="stack" Grid.ColumnSpan="2"  Orientation="Vertical">
            <Label Name="label" FontSize="28"/>
        </StackPanel>
        <Button x:Name="btnClose" Grid.Row="1">Close without Saving</Button>
        <Button x:Name="btnAddToOrder" Grid.Row="1" Grid.Column="1">Add to Order</Button>
    </Grid>
</UserControl>
